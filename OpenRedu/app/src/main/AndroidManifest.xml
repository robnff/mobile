        <activity
            android:name=".activities.lecture.UploadStep3Activity"
            android:configChanges="orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".activities.lecture.NewFolderActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.NewModuleActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.WebViewActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>

        <!-- BuzzBox -->
        <receiver android:name="com.buzzbox.mob.android.scheduler.SchedulerReceiver" >
            <intent-filter>
                <action android:name="com.buzzbox.mob.android.scheduler.wakeup" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service android:name="com.buzzbox.mob.android.scheduler.ScheduledService" />

        <activity
            android:name=".activities.adressAddOn.LocationActivity"
            android:label="@string/title_activity_location" >
        </activity>
        <activity
            android:name=".activities.adressAddOn.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name=".activities.adressAddOn.SearchLocationActivity"
            android:label="@string/title_activity_search_location" >
